<h2 class='mt-3 q-subtitle-black'>{{title}}</h2>
<hr class='my-3 q-gray' />

{{!-- {{#if (messages.error)}}
  <p>{{messages.error}}</p>
{{/if}} --}}

<form action='submit' method='post' id='submit' onsubmit=''>
  <p>Username</p>
  <input
    class='rounded-md border-black input-login'
    type='text'
    name='accountName'
  />
  <p>Password</p>
  <input
    class='rounded-md border-black input-login'
    type='password'
    name='password'
  />
  <br />
</form>
<button
  class='btn-submit bg-blue-300 rounded-md mt-3'
  name='submit'
  type='submit'
  form='submit'
>
  <h2 class='mx-3 my-1 q-subtitle-black'>{{title}}</h2>
</button>

{{#if isLogin}}
  <p class='q-subtitle-dgray text-center my-3'>
    <a href='/register'>No account yet? Register here!</a>
  </p>
{{/if}}