<html>
  <head>
    <meta charset='utf-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <title>{{title}}</title>
    <meta name='description' content='' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='stylesheet' href='/css/styles.css' />
    <!-- custom login css -->
    <link rel='stylesheet' href='/css/login-styles.css' />
    <!-- tailwind link -->
    <link
      href='https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css'
      rel='stylesheet'
    />
    <!-- Google fonts link -->
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Noto+Serif:wght@700&display=swap'
      rel='stylesheet'
    />
  </head>
  <body>
    <!-- login box -->
    <div class='background'>
      <div class='login-box bg-white rounded-lg'>
        <div class='login-tb'>
          <h1 class='text-5xl my-1 q-title q-red text-center'>QuickSolve</h1>
          <h2 class='q-subtitle-dgray mx-32 my-1 q-subtitle-black text-center'>
            Let Your questions be answered!
          </h2>
            {{#if isBigBox}}
            {{>user-login this}}
            {{else}}
            {{>user-search this}}
            {{/if}}
            
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/js/boxpage.js"></script>
  </body>
</html>