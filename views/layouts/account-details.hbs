<!-- User profile edit -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>{{title}}</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- insert more custom css files here (if needed) -->
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/index-styles.css" />
    <link rel="stylesheet" href="/css/account-details-styles.css" />
    <!-- tailwind link -->
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <!-- Google fonts link -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@700&display=swap"
      rel="stylesheet"
    />
    <!-- Font awesome link -->
    <script
      src="https://kit.fontawesome.com/0947d2976d.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
      <div class="background">
    <!-- header -->
    {{>header}}
<!-- white box -->
    <div class="main-box bg-white rounded-lg relative flex">
      <!-- gray details box -->
      <div class="details-box q-gray-bg rounded-lg text-center m-auto">
        <!-- div containing elements -->
        <div class="relative tb absolute mx-auto pb-6">
        <i class="fas fa-question fa-7x q-red mt-10 mb-3 "></i>
        <h1 class="q-title text-2x1 mt-3 mb-1 text-3xl">{{title}}</h1>
        <hr class="my-5">

        {{#if isEdit}}
        <h2 class="text-2x1 mb-1">New Username</h2>
        <input class="acct-input mt-1 mb-3" type="text">
        <h2 class="text-2x1 mt-3 mb-1">New Password</h2>
        <input class="acct-input mx-auto mt-1 mb-3" type="text">
        <button class="btn-submit bg-blue-300 rounded-md my-3" onclick="location.href='./accounts/account1.html'">
          <h2 class="mx-3 my-1 q-subtitle-black my-3">Submit</h2>
        </div>
        {{else}}
        {{!-- if viewing account --}}
        <h2 class="q-title q-red text-2x1 mb-1">Username:</h2>
        <h2 class="text-2x1 mb-1">{{accountName}}</h2>
        <br>
        <h2 class="q-title q-red text-2x1 mt-3 mb-1">Password:</h2>
        <h2 class="text-2x1 mb-1">Password</h2>
        <button class="btn-submit bg-blue-300 rounded-md my-3" onclick="location.href='./account-details.html'"
        type="button">
          <h2 class="mx-3 my-1 q-subtitle-black my-4">Edit details</h2>
        {{/if}}
        </button>

      </div>
    </div>
      </div>

      
    </div>
  </body>
</html>
